@model AdvertReportFormModel

@{
    ViewData["Title"] = "Report advert";
}
<div class="container">
    <div class="row">
        <div class="offset-xl-2 col-xl-8 offset-lg-2 col-lg-8 col-sm-12">

            <h2 class="text-center">@ViewData["Title"]</h2>

            <form method="post">
                <input hidden asp-for="AdvertId" />
                <div class="form-group">
                    <label asp-for="AdvertName" class="control-label"></label>
                    <input asp-for="AdvertName" class="form-control" disabled/>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter your complain"></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>
                <div class="form-group">
                    <input class="mt-3 text-center btn btn-primary" type="submit" value="Submit" />
                </div>
            </form>
        </div>
    </div>
</div>