@model AdvertFormModel


<div class="container">
    <div class="row">
        <div class="offset-3 col-6">
            <form method="post">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" placeholder="Name of advert">
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId">Example select</label>
                    <select asp-for="CategoryId" class="form-select js-example-basic-single">
                        @* @foreach (var item in collection)*@
                        {
                        <optgroup label="US State">
                            <option value="AK">Alaska</option>
                            <option value="HI">Hawaii</option>
                        </optgroup>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                </div>

                <div class="form-group">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" class="form-control">

                </div>
                <div>
                    <input class="btn-primary" type="submit" value="Save" placeholder="Price of the product" />
                </div>
            </form>

        </div>
    </div>
</div>

