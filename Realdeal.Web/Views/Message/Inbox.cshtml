@model IEnumerable<InboxMessageViewModel>

@{
    ViewData["Title"] = "Inbox";
}

<h2 class="text-center">@ViewData["Title"]</h2>

<div class="mt-3 col-md-8 mb-5 container">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Advert name</th>
                <th scope="col">From</th>
                <th scope="col">Last Message</th>
                <th scope="col">Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var inbox in Model)
            {
                <tr onclick="location.href='/Message/Chat?advertId=@inbox.AdvertId&senderId=@inbox.SenderId&recieverId=@inbox.ResieverId'" class="table-primary">
                    <th scope="row">@inbox.AdvertName</th>
                    <td>@inbox.LastMessageSender</td>
                    <td>@inbox.Content</td>
                    <td>@inbox.LastMessageDate</td>
                </tr>
            }
        </tbody>
    </table>
    @if (!Model.Any())
    {
        <h3 class="text-center text-primary">Currently no messages!</h3>
    }
</div>