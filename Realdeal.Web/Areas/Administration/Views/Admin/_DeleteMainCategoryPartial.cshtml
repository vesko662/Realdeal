@model CategoryModel

<div class="modal fade" id="m@(Model.Id.Substring(0,4))" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Delete main category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                When you delete a main category, all of its subcategories become unassigned, causing advert to disappear!
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cencel</button>
                <a type="button" class="btn btn-primary" asp-action="DeleteMainCategory" asp-route-categoryId="@Model.Id">Continue</a>
            </div>
        </div>
    </div>
</div>