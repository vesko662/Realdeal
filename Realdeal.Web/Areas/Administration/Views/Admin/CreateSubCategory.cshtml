@model CreateSubCategoryFormModel

@{
    ViewData["Title"] = "Create subcategory";
}
<div class="container">
    <div class="row">
        <div class="offset-md-4 col-md-4">
            <h1 class="text-center">@ViewData["Title"]</h1>
            <form method="post">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" placeholder="Category name"/>
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MainCategoryId"></label>
                    <select asp-for="MainCategoryId" class="form-select">
                        @foreach (var mainCat in Model.MainCategories)
                        {
                            <option value="@mainCat.Id">@mainCat.Name</option>
                        }
                    </select>
                    <span asp-validation-for="MainCategoryId" class="text-danger small"></span>
                </div>
                <div class="form-group text-center mt-3">
                    <input class="mt-3 text-center btn btn-primary" type="submit" value="Create" />
                </div>
            </form>
        </div>
    </div>
</div>